                <option value="rugs">rugs</option>
            </select>
            <select class="srch-param" name="MATERIAL">
                <option value="">material</option>
                <option value="Solid Wood">Solid Wood</option>
                <option value="Iron">Iron</option>
                <option value="Glass">Glass</option>
                <option value="Marble">Marble</option>
                <option value="Leather">Leather</option>
                <option value="Fabric">Fabric</option>
            </select>
            <select class="srch-param" name="COLOR">
                <option value="">color</option>
                <option value="white">white</option>
                <option value="black">black</option>
                <option value="brown">brown</option>
                <option value="beige">beige</option>
                <option value="grey">grey</option>
                <option value="green">red</option>
            </select>
            <select class="srch-param" name="SIZE">
                <option value="">size</option>
                <optgroup label="width">
                    <option value="50cm">up to 50cm</option>
                    <option value="100cm">up to 100cm</option>
                    <option value="150cm">up to 150cm</option>
                </optgroup>
                <optgroup label="height">
                    <option value="50cm">up to 50cm</option>
                    <option value="100cm">up to 100cm</option>
                    <option value="150cm">up to 150cm</option>
                </optgroup>
                <optgroup label="depth">
                    <option value="50cm">up to 50cm</option>
                    <option value="100cm">up to 100cm</option>
                    <option value="150cm">up to 150cm</option>
                </optgroup>
            </select>
            </div>
        </div>
    </div>

    <div class="content">
        <h1> Furniture <br> <span> Design </span><br> Studio</h1>
